---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
    turnstile?: false;
    meta_title?: string;
    image?: string;
  };
}

const {
  content: { title, description, turnstile, meta_title, image },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} metaTitle={meta_title} image={image} />
    {
      turnstile && (
        <script
          is:inline
          src="https://challenges.cloudflare.com/turnstile/v0/g/10082b7b/api.js?render=explicit"
          class="turnstile"
        />
      )
    }
  </head>

  <body>
    <main>
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>
